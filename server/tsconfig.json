{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "public",
  ],
  "exclude": [
    "node_modules",
    "src/test/",
    "src/testSetup/",
    "dist"
  ]
}